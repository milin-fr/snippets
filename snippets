# convert .gif images into code

import base64
import os

abspath = os.path.abspath(__file__)
current_directory = os.path.dirname(abspath)
os.chdir(current_directory)

with open("icon.gif", "rb") as image_file:
    encoded_string = base64.b64encode(image_file.read())
print(encoded_string)

# open link with click on tkinter widget
import webbrowser
import tkinter
from tkinter import Label

def open_link(event):
    webbrowser.open_new(r"www.google.com")
    
root = tkinter.Tk()
web_link_widget = Label(root, text = "link", fg = "blue", cursor = "hand2").pack()
web_link_widget.bind("<Button-1>", open_link)

root.mainloop()
